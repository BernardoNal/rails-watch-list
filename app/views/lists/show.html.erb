<h2>List Name: <%= @list.name %></h2>


<% @list.bookmarks.each do |bookmark| %>
  <div class='card bg-light m-2' style="max-width: 18rem;">
  <%movie = Movie.find(bookmark.movie_id) %>
    <h2><%= movie.title %></h2>
    <img src=<%=movie.poster_url%> alt="">
    <div class="card-footer border">
          <p><%=bookmark.comment %></p>
        </div>
    </div>
<% end %>
<div>
  <%= link_to "Add a movie", new_list_bookmark_path(@list) , class: "btn btn-primary my-2"%>
</div>

<div>
  <%= link_to "Back to lists", lists_path , class: "btn btn-primary"%>
</div>
